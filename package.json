{
  "name": "codescraper-pro",
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --host --force",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron . --no-sandbox --disable-features=VizDisplayCompositor --ignore-certificate-errors --allow-insecure-localhost",
    "dev:full": "concurrently -k -n \"VITE,ELECTRON\" -c \"green,blue\" \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "start": "npm run dev:full",
    "dev:electron": "npm run start",
    "prod:test": "npm run build && npm run electron",
    "test:simple": "vite & sleep 3 && electron .",
    "build:run": "npm run build && npm run electron",
    "icons:extract": "node scripts/extract-all-icons.js",
    "icons:bundle": "node scripts/bundle-all-icons.js",
    "icons:all": "npm run icons:extract && npm run icons:bundle",
    "build:enterprise": "npm run icons:all && npm run build",
    "electron:enterprise": "npm run build:enterprise && npm run electron",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -l -w -m",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "icons:theme": "node scripts/create-themed-icons.mjs"
  },
  "build": {
    "appId": "com.bisi.codescraper-pro",
    "productName": "CodeScraper Pro",
    "directories": {
      "output": "release",
      "app": "."
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "public/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@iconify-json/eos-icons": "^1.2.4",
    "@iconify-json/iconamoon": "^1.2.2",
    "@iconify-json/ion": "^1.2.6",
    "@iconify-json/logos": "^1.2.10",
    "@iconify-json/majesticons": "^1.2.4",
    "@iconify-json/material-symbols": "^1.2.50",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/proicons": "^1.2.18",
    "@iconify-json/simple-icons": "^1.2.62",
    "@iconify-json/solar": "^1.2.5",
    "@iconify-json/svg-spinners": "^1.2.4",
    "@iconify-json/vscode-icons": "^1.2.37",
    "@iconify/json": "^2.2.417",
    "@iconify/utils": "^3.1.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^29.4.6",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "axios": "^1.13.2",
    "bytenode": "^1.5.7",
    "chart.js": "^4.5.1",
    "playwright": "^1.57.0",
    "serve-handler": "^6.1.6",
    "systeminformation": "^5.27.11",
    "vue": "^3.5.25",
    "vue-draggable-next": "^2.3.0",
    "vue-router": "^4.6.3"
  }
}
