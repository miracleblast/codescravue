{
  "name": "codescraper-pro",
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
  "dev": "vite --host", 
  "build": "vite build",
  "preview": "vite preview",
  "electron": "electron . --no-sandbox --disable-features=VizDisplayCompositor --ignore-certificate-errors --allow-insecure-localhost",
  "dev:electron": "electron . --no-sandbox --disable-features=VizDisplayCompositor --ignore-certificate-errors --allow-insecure-localhost",
  "dev:full": "concurrently -k \"npm run dev\" \"wait-on https://localhost:3000 && npm run dev:electron\"",
  "start": "npm run dev:full",
  "build:run": "npm run build && npm run electron",
  "dist": "npm run build && electron-builder",
  "dist:all": "npm run build && electron-builder -l -w -m",
  "dist:linux": "npm run build && electron-builder --linux",
  "dist:win": "npm run build && electron-builder --win",
  "dist:mac": "npm run build && electron-builder --mac"
},
  "build": {
    "appId": "com.bisi.codescraper-pro",
    "productName": "CodeScraper Pro",
    "directories": {
      "output": "release",
      "app": "."
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "public/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.4",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bytenode": "^1.5.7",
    "chart.js": "^4.5.1",
    "playwright": "^1.57.0",
    "serve-handler": "^6.1.6",
    "systeminformation": "^5.27.11",
    "vue": "^3.5.25",
    "vue-draggable-next": "^2.3.0",
    "vue-router": "^4.6.3"
  }
}
